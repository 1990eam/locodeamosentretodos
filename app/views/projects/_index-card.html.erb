<div class="index-project-card border rounded aos-init" data-aos="fade-right" data-aos-easing="linear" data-aos-duration="500">
    <div class="d-flex">
      <%= cl_image_tag project.photo.key, alt: "alttext", class: "project-card-logo mr-3 ml-2" %>
      <div>
        <h2><%= project.name %></h2>
        <p class="text-muted"><%= project.description %></p>
      </div>
      <% if project.sponsored %>
        <div class="badge badge-pill badge-info project-card-sponsored d-flex justify-content-between">
          <i class="fa fa-heart" aria-hidden="true" style="color: #da64ab;"></i>
          <div class="d-none d-sm-none d-md-block d-lg-block d-xl-block ml-1">Sponsored</div>
        </div>
      <% end %>
    </div>

    <div class="d-flex">
      <div class="card-links mr-3">
        <h3>Links</h3>
        <div>
          <% if project.link_1 != nil %>
            <%= link_to "http://#{project.link_1}" do %>
              <div class="d-flex">
                <i class="fab fa-github-square"></i>
                <div class="d-none d-sm-none d-md-none d-lg-inline d-xl-inline ml-1 align-middle">
                  <%= project.link_1.length > 24 ? "#{project.link_1[0...24]}..." : project.link_1 %>
                </div>
              </div>
            <% end %>
          <% end %>
          <% if project.link_2 != nil %>
            <%= link_to "http://#{project.link_2}" do %>
              <div class="d-flex">
                <i class="fas fa-globe"></i>
                <div class="d-none d-sm-none d-md-none d-lg-inline d-xl-inline ml-1 align-middle"><%= project.link_2 %></div>
              </div>
            <% end %>
          <% end %>
        </div>
        <div class="open-positions rounded">
          <p><%= project.roles.count { |role| role.open? } %> positions open</p>
        </div>
      </div>

      <div>
        <div>
          <h3>Tags</h3>
          <div class="d-flex flex-wrap">
            <p class="mr-2 mb-0"><i class="fab fa-html5" style="color: orange;"></i> HTML</p>
            <p class="mr-2 mb-0"><i class="fab fa-css3-alt" style="color: blue;"></i> CSS</p>
            <p class="mr-2 mb-0"><i class="fas fa-gem" style="color: red;"></i> Ruby</p>
            <p class="mr-2 mb-0"><i class="fab fa-js-square" style="color:teal;"></i> JScript</p>
            <p class="mr-2 mb-0"><i class="fas fa-cookie-bite" style="color: brown;"></i> Cooking!</p>
          </div>
        </div>

        <div class="mt-2">
          <h3>Contributors <span class="badge badge-pill badge-light"><%= project.collaborators.count { |x| x.status = "active" } %></span></h3>
            <% project.collaborators.each do |collaborator| %>
              <%= cl_image_tag collaborator.user.photo.key, class: "avatar-small mr-2" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
