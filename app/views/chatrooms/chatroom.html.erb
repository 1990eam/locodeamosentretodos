<div class="d-block d-md-flex">
  <div class="sidebar p-3">
    <div class="sidebar-section mt-4">
      <div class="border-bottom">
        <p class="mb-3"><%= @chatroom.name %></p>
        <p><%=  %></p>
      </div>
    </div>

    <div class="sidebar-section mt-4">
      <% @chatroom.application_request.user == current_user #aplicante %>

      <% @chatroom.application_request.project.user #project owner %>
    </div>
  </div>

  <div class="d-flex flex-grow-1 flex-column justify-content-between">
    <div class="chat-messages flex-grow-1">
      <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
        <% @chatroom.messages.each do |message| %>
          <%= render "messages/message", message: message %>
        <% end %>
      </div>
    </div>
    <%= simple_form_for [ @chatroom, @message ], remote: true, html: { class: "mb-0 mt-3" } do |f| %>
      <%= f.input :content, label: false, placeholder: "Your messsage here..." %>
    <% end %>
  </div>
</div>
