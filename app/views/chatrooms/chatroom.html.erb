<div class="d-flex">
  <div class="sidebar">
    <h1>Application Chatroom</h1>

    <div class="sidebar-section">
      seccion
    </div>

    <div class="sidebar-section">
      seccion
    </div>
  </div>

  <div class="d-flex flex-grow-1 px-3 pt-3 flex-column justify-content-between ">
    <div class="flex-grow-1">
      <div class="border-bottom">
        <h5><%= image_tag "logo.png", class: "chat-brand" %> <%= @chatroom.name %></h1>
      </div>
      <div class="chat-messages vh-100">
        <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
          <% @chatroom.messages.each do |message| %>
            <%= render "messages/message", message: message %>
          <% end %>
        </div>
      </div>
    </div>
    <%= simple_form_for [ @chatroom, @message ], remote: true, class: "fixed-bottom mb-0" do |f| %>
      <%= f.input :content, label: false, placeholder: "Your messsage here..." %>
    <% end %>
  </div>
</div>
