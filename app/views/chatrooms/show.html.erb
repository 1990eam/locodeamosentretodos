<div class="container">
<h1><%= @chatroom.name %></h1>
  <div id="messages" data-chatroom-id="<%= @chatroom.id %>">
    <% @chatroom.messages.each do |message| %>
      <%= render "messages/message", message: message %>
    <% end %>
  </div>
  <%= simple_form_for [ @application, @chatroom, @message ], remote: true do |f| %>
      <%= f.input :content, label: false, placeholder: "Your messsage here..." %>
  <% end %>
</div>
