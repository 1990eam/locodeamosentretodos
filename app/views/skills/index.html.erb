<div class="container">
  <h2> Mis Skills üèÖ</h2>
    <div>
      <div class="row">
        <% @skills.each do |skill| %>
        <div class="skill-card col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="skill-content">
            <%= sanitize pick_tech_icon(skill.technology.name), tags: %w(i), attributes: %w(class style) %>
            <p class="skill-title"><strong><%= skill.technology.name %></strong> - <%= skill.level.name.capitalize %></p>
            <p><%= link_to "Eliminar", skill_path(skill), method: :delete, data: { confirm: 'Eliminar skill?'}, class: "fas fa-trash-alt px-3 orange", class: "btn btn-warning" %></p>
          </div>
        </div>
        <% end %>
        <div class="skill-card col-xs-12 col-sm-4 col-sm-offset-4">
          <div class="skill-content add-skill-card">
            <h5>Agregar Skill</h5>
            <%= simple_form_for [ @user, @skill ] do |f| %>
            <p>Seleccionar Tecnolog√≠a</p>
              <%= f.collection_select :technology_id, @techs, :id, :name%>
            <p>Seleccionar nivel</p>
              <%= f.collection_select :level_id, @levels, :id, :name%>
              <br>
              <%= f.submit "Agregar", class: "btn btn-primary skill-submit-btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
</div>


<style>
  .skill-card {
    text-align: center;
    margin-bottom: 50px;
    padding-right: 10px;
    padding-left: 10px;
    height: 100%;
  }
  .skill-title {
    border-top: 1px solid black;
    border-bottom: 1px solid black;
    width: 200px;
    margin: auto;
    margin-bottom: 25px;
  }

  .skill-content {
    border: 1px solid white;
    background-color: white;
    border-radius: 16px;
    text-align: center;
    margin-right: 25px;
    margin-left: 25px;
    box-shadow: 2px 2px 12px rgba(0,0,0,0.3);
  }

  .add-skill-card {
    height: 250px;

  }
  .add-skill-card p {
    margin-top: 22px;
    margin-bottom: 0px;
  }

  h2 {
    margin-top: 25px;
    margin-bottom: 50px;

  }

  .add-skill-card h5 {
    margin-top: 10px;
    margin-bottom: 5px;
    width: 184px;
    border-bottom: 1px solid black;
    /* text-align: center; */
    margin-left: auto;
    margin-right: auto
  }

  .skill-submit-btn {
    margin-top: 23px;
  }

  body > div.container > div > div > div > div > i {
    font-size: 130px;
    margin-top: 8px;
    margin-bottom: 15px;
  }
</style>
