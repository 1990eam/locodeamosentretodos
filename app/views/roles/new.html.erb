<h2>Roles de este proyecto</h2>
<div class="roles">
  <% @project_roles.each do |role| %>
    <div class="role-card">
      <p class="role-title"><%= role.name %></p>
      <p><%= role.open? %></p>

    </div>
  <% end %>

</div>


<div class="new-role-form-container">

  <h4>Agreg√° un nuevo rol</h4>
  <%= simple_form_for([ @project, @role ], remote: true) do |f| %>
    <%= f.input :name %>
    <%= f.submit "Submit role", class: "btn btn-primary" %>
  <% end %>

</div>
