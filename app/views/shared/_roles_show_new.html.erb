<div class="container">
  <h2>Project Roles</h2>
  <div class="card-wrapper">

    <% @project.roles.each do |role| %>
      <div class="card clickable-card">
        <div class="card-body text-center">
          <h5 class="card-title"><%= role.name %></h5>
          <div class="d-flex flex-wrap" style="justify-content: center;">
            <% role.requirements.each do |requirement|%>
              <p class="mr-1">
                <%= sanitize pick_tech_icon(requirement.technology.name) %>
                <%= requirement.technology.name %>
              </p>
            <% end %>
          </div>
          <!-- logica avatars/mensaje si el role esta ocupado o vacante -->
          <!-- si esta ocupado -->
          <% if !role.open? %>
            <% if role.active_collaborator.user.photo.attached? %>
              <%= cl_image_tag role.active_collaborator.user.photo.key, data: { toggle: 'tooltip' }, class: "avatar dropdown-toggle", title: "#{role.active_collaborator.user.first_name} / #{role.name}" %>
            <% else %>
              <%= image_tag "https://www.jdevoto.cl/web/wp-content/uploads/2018/04/default-user-img.jpg", class: "avatar dropdown-toggle" %>
            <% end %>
            <p class="role.status" style="color: red;">This position is taken</p>
            <%= link_to "Delete collaborator", collaborator_path(role.active_collaborator), method: :delete, data: { confirm: 'Estas seguro de eliminar a este colaborador?' } %>

            <!-- si esta vacante -->
          <% else %>

            <p class="role.status" style="color: green;">This position is open</p>
          <% end %>
          <div class="skill-level">
            <% role.requirements.each do |requirement| %>
              <p><%= requirement.technology.name %> <%= requirement.level.name %></p>
            <% end %>
          </div>
          <p class="card-text"><%= role.description %></p>
        </div>
      </div>
      <% end %>

      <div class="card clickable-card">
        <div class="card-body text-center">
          <h5 class="card-title">New role</h5>
          <div class="container">

            <%= simple_form_for([ @project, @role ], remote: true) do |f| %>
              <%= f.input :name %>
              <%= f.input :description %>
              <%= f.submit "Add role", class: "btn btn-primary" %>
            <% end %>

          </div>
        </div>
      </div>
  </div>
</div>


