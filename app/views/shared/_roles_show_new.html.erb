<div class="container">
  <h2>Project Roles</h2>
  <div class="card-wrapper">

    <% @project.roles.each do |role| %>
      <div class="card clickable-card" data-target="<%= role.id %>" data-delete="<%= role.id %>">
        <div class="card-body text-center">
          <h5 class="card-title"><%= role.name %></h5>
          <!-- logica avatars/mensaje si el role esta ocupado o vacante -->
          <!-- si esta ocupado -->
          <% if !role.open? %>

            <% @project.collaborators.each do |collaborator| %>
              <% if collaborator.role == role %>

                  <% if collaborator.user.photo.attached? %>
                    <%= cl_image_tag collaborator.user.photo.key, data: { toggle: 'tooltip' }, class: "avatar dropdown-toggle", title: "#{collaborator.user.first_name} / #{collaborator.role.name}" %>

                  <% else %>
                    <%= image_tag "https://www.jdevoto.cl/web/wp-content/uploads/2018/04/default-user-img.jpg", class: "avatar dropdown-toggle" %>
                  <% end %>
                  <p class="role.status mb-2" style="color: red;">This position is taken</p>

              <% end %>
            <% end %>
            <!-- si esta vacante -->
          <% else %>

            <p class="role.status mb-2" style="color: green;">This position is open</p>
          <% end %>

          <div class="skill-level mt-0">
            <% role.requirements.each do |requirement| %>
              <div class="d-flex flex-wrap m-0">
                <p class=" text-left mr-2 mb-0">
                  <%= sanitize pick_tech_icon(requirement.technology.name), tags: %w(i), attributes: %w(class style) %>
                  <%= requirement.technology.name %>
                </p>
                <p class='mb-0'><%= requirement.level.name.capitalize %></p>
              </div>
            <% end %>
          </div>
          <div>
            <h6 class="mb-0 mt-3"> Funciones del puesto </h6>
            <p class="card-text"><%= role.description %></p>
          </div>
        </div>
      </div>
      <% end %>

      <div class="card clickable-card">
        <div class="card-body text-center">
          <h5 class="card-title">New role</h5>
          <div class="container">

            <%= simple_form_for([ @project, @role ], remote: true) do |f| %>
              <%= f.input :name %>
              <%= f.input :description %>
              <%= f.submit "Add role", class: "btn btn-primary" %>
            <% end %>

          </div>
        </div>
      </div>
  </div>
</div>


