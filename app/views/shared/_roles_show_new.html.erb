<div class="container">
  <h2>Project Roles</h2>
  <div class="card-wrapper">

    <% @project.roles.each do |role| %>
      <div class="card clickable-card" data-target="<%= role.id %>" data-delete="<%= role.id %>">
        <div class="card-body text-center">
          <h5 class="card-title"><%= role.name %></h5>
          <div class="d-flex flex-wrap">
            <p class="mr-2 mb-0"><i class="fab fa-html5" style="color: orange;"></i> HTML</p>
            <p class="mr-2 mb-0"><i class="fab fa-css3-alt" style="color: blue;"></i> CSS</p>
            <p class="mr-2 mb-0"><i class="fas fa-gem" style="color: red;"></i> Ruby</p>
            <p class="mr-2 mb-0"><i class="fab fa-js-square" style="color:teal;"></i> JScript</p>
            <p class="mr-2 mb-0"><i class="fas fa-cookie-bite" style="color: brown;"></i> Cooking!</p>
          </div>
          <!-- role.status indica si una posicion esta cubierta o no -->
          <% if !role.open? %>

            <% @project.collaborators.each do |collaborator| %>
              <% if collaborator.role == role %>

                  <% if collaborator.user.photo.attached? %>
                    <%= cl_image_tag collaborator.user.photo.key, data: { toggle: 'tooltip' }, class: "avatar dropdown-toggle", title: "#{collaborator.user.first_name} / #{collaborator.role.name}" %>

                  <% else %>
                    <%= image_tag "https://www.jdevoto.cl/web/wp-content/uploads/2018/04/default-user-img.jpg", class: "avatar dropdown-toggle" %>
                  <% end %>



              <% end %>
            <% end %>

          <% end %>
          <p class="role.status">Covered: <%= !role.open? %></p>
           <% role.requirements.each do |requirement|%>
          <h6 class='rol text-left'> <i class="fas fa-gem" style="color: red"></i> <%= requirement.technology.name %> </h6>
          <% end %>
          <div class="progress">
            <div class="progress-bar" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
          </div>
          <p class="card-text"><%= role.description %></p>
           <% if role.open? %>
            <button class="btn btn-primary"> <i class="fas fa-plus-circle primary "></i> Apply </button>

           <% end %>
        </div>
      </div>
      <% end %>

      <div class="card clickable-card">
        <div class="card-body text-center">
          <h5 class="card-title">New role</h5>
          <div class="container">

            <%= simple_form_for([ @project, @role ], remote: true) do |f| %>
              <%= f.input :name %>
              <%= f.input :description %>
              <%= f.submit "Add role", class: "btn btn-primary" %>
            <% end %>

          </div>
        </div>
      </div>

  </div>
</div>


